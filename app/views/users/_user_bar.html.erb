<% if logged_in? -%>
  <div id="user-bar-greeting">Logged in as <%= link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to "Log out", logout_path, { :title => "Log out" }    %>)</div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP 'Você não está logado', :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to "Login",  login_path,  { :title => "Log in" } %> /
                               <%= link_to "Cadastrar", signup_path, { :title => "Criar uma conta" } %></div>
<% end -%>
