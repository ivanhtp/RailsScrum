<h1>Nova Tarefa</h1>

<br />

<% form_for(@tarefa) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :titulo %>
  	<%= f.text_field :titulo %>
  </p>  	
  <p>
    <%= f.label :descricao %>
    <%= f.text_area :descricao %>
  </p>

  <p>  
    <%= f.label :pontos %>
    <%= f.text_field :pontos %>
  </p>  

  <p>
    <%= f.label "Status Atual" %>
	<%= f.select :andamento_id, Andamento.find(:all).collect{ |item| [item.nome_andamento, item.id]} %>
  </p>
  

  <p>
    <%= f.label :data %>
    <%= f.date_select(:data, :order => [:day, :month, :year]) %>
  </p>


  <p>
    <%= f.label :user_login %>
    <%= f.text_field :user_login %>
  </p>
  
   <p>
    <%= f.label :estoria_id %>
    <%= f.text_field :estoria_id %>
  </p>

  <p>
    <%= f.submit 'Confirmar',:estoria_id => params[:estoria_id]  %>
  </p>
<% end %>


